[flake8]
max-line-length = 127
exclude =
    .git,
    __pycache__,
    venv,
    .venv,
    build,
    dist,
    *.egg-info,
    .pytest_cache,
    .mypy_cache,
    models,
    logs

ignore =
    E203,
    E501,
    W503,
    W504,
    E402,
    F401

per-file-ignores =
    __init__.py: F401
    tests/*: F401, F811

max-complexity = 15

# Statistics
statistics = True
count = True

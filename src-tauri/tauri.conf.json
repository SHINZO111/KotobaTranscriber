{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "KotobaTranscriber",
  "version": "2.2.0",
  "identifier": "com.kotoba-transcriber.app",
  "build": {
    "frontendDist": "../frontend/dist",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "cd ../frontend && npm run dev",
    "beforeBuildCommand": "cd ../frontend && npm run build"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "KotobaTranscriber",
        "width": 960,
        "height": 720,
        "minWidth": 480,
        "minHeight": 520,
        "center": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self'; connect-src 'self' http://127.0.0.1:* ws://127.0.0.1:*; style-src 'self' 'unsafe-inline'; img-src 'self' data:"
    },
    "trayIcon": {
      "tooltip": "KotobaTranscriber"
    }
  },
  "bundle": {
    "active": true,
    "targets": ["nsis"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.ico"
    ],
    "windows": {
      "nsis": {
        "installMode": "currentUser",
        "languages": ["Japanese", "English"]
      }
    },
    "externalBin": ["binaries/kotoba_backend"]
  },
  "plugins": {
    "shell": {
      "open": false
    }
  }
}
